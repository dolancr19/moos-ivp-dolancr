Behavior = BHV_AvoidCollision
{
  name       = avdcollision_
  pwt        = 200
  condition  = AVOID = true
  updates    = CONTACT_INFO
  endflag    = CONTACT_RESOLVED = $[CONTACT]
  templating = spawn

               contact = to-be-set
      on_no_contact_ok = true
           extrapolate = true
                 decay = 30,60

        pwt_outer_dist = 50
        pwt_inner_dist = 20
        completed_dist = 75
     min_util_cpa_dist = 8
     max_util_cpa_dist = 25
             pwt_grade = linear
   bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}

//-------------------------------------------------
Behavior = BHV_FrontSearch
{
  name = frontsearch
  vessel = $(VNAME)
  speed = 2   // meters per second
  pwt = 5
  condition = MODE==SURVEYING2
  perpetual    = true
  updates      = SEARCH_UPDATES
  activeflag   = SURVEY_UNDERWAY = true
  inactiveflag = SURVEY_UNDERWAY = false
  endflag      = RETURN = true
  }

//-------------------------------------------------
Behavior = BHV_ConstantSpeed
{
  name=constant_spd_search
  pwt=100
  condition=(MODE==SURVEYING1) or (MODE== SURVEYING2)
  perpetual=true
  updates=CONSTANT_SPD_SEARCH_UPDATES
  speed=2
}

//-------------------------------------------------
Behavior = BHV_MaintainArea
{
  name=maintain_area
  pwt=100
  condition=(MODE==SURVEYING1) or (MODE== SURVEYING2)
  condition=OPREGION=true
  perpetual=true
  updates=MAINTAIN_UPDATES
}